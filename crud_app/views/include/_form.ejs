  <!-- form handling-->
  <form  action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="firstName" class="text-light">First Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="firstname" value="" placeholder="Ivan">
        </div>

        <div class="form-group">
            <label for="lastName" class="text-light">Last Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="lastname" value="" placeholder="Ursta">
        </div>

        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>

        <div class="form-group">
            <label for="Phone" class="text-light">Phone Number</label>
            <input type="text" name="phone" value="" placeholder="+380980388598">
        </div>

        <div class="form-group">
           <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>